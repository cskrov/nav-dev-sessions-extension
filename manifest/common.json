{
  "$schema": "https://json.schemastore.org/webextension.json",
  "manifest_version": 3,
  "name": "Nav Dev Sessions Extension",
  "description": "Enables the user to set up mappings from nav.no domains to localhost ports, to copy session cookies to all requests to localhost.",
  "icons": {
    "192": "images/logo192.png",
    "512": "images/logo512.png"
  },
  "action": {
    "default_icon": {
      "192": "images/logo192.png",
      "512": "images/logo512.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": ["cookies", "storage", "tabs", "declarativeNetRequest"],
  "host_permissions": ["*://*.nav.no/", "*://localhost/"]
}
